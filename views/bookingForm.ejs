<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking Form</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background-color: #f4f4f9;
        }
        .container {
            text-align: center;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            max-width: 500px;
            width: 100%;
        }
        h1 {
            color: #4CAF50;
            margin-bottom: 20px;
        }
        label {
            display: block;
            margin: 10px 0 5px;
            font-weight: bold;
            text-align: left;
        }
        .static-id {
            font-size: 16px;
            margin: 5px 0 20px;
            padding: 10px;
            background-color: #e9ecef;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
        }
        input[type="date"],
        input[type="time"],
        textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0 20px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            font-weight: bold;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Book Your Appointment</h1>
        <form id="bookingForm" method="POST" action="/book-appointment">
            <input type="hidden" name="employee_id" value="<%= employeeID %>"> <!-- Hidden field for employee ID -->
            
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>
            
            <!-- <label for="time">Time:</label>
            <input type="time" id="time" name="time" required> -->
            <div class="input-box">
                <label for="time">Preferred Appointment Time:</label>
                <select id="time" name="time" required>
                    <option value="" disabled selected>Select a time</option>
                </select>
            </div>
            
            <label for="reason">Reason for Visit:</label>
            <textarea id="reason" name="reason" rows="4" required></textarea>
            
            <label for="specialRequests">Special Requests:</label>
            <textarea id="specialRequests" name="specialRequests" rows="4"></textarea>
            
            <button type="submit">Book Appointment</button>
        </form>        
    </div>
    <script>
        const selectElement = document.getElementById('time');

        // Function to populate the select options with time slots
        function populateTimeSlots() {
            const startHour = 9; // 9 AM
            const endHour = 18; // 6 PM
            const interval = 10; // 10 minutes

            for (let hour = startHour; hour <= endHour; hour++) { // Change '<' to '<='
                for (let minute = 0; minute < 60; minute += interval) {
                    // Special handling for 6 PM to only show 6:00 PM
                    if (hour === endHour && minute > 0) {
                        break; // Stop adding times after 6:00 PM
                    }

                    const time = new Date();
                    time.setHours(hour);
                    time.setMinutes(minute);
                    const formattedTime = time.toTimeString().slice(0, 5); // Format as HH:MM

                    // Create option element
                    const option = document.createElement('option');
                    option.value = formattedTime;
                    option.textContent = formattedTime;

                    selectElement.appendChild(option);
                }
            }
        }
        populateTimeSlots();
    </script>
</body>
</html>